<section id='results'>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Rider one</th>
        <th>Rider two</th>
        <th>League</th>
        <th>Odds</th>
        <th>% chance</th>
        <th>Pick</th>
        <th>Result</th>
      </tr>
    </thead>
    <tbody>
      <% @formula1.each do |formula1| %>
        <tr>
          <td>
            <% if formula1.match_starts_at.today? %>
              <%= formula1.match_starts_at.strftime("%H:%M %Z") %>
            <% else %>
              <%= formula1.match_starts_at.strftime("%-d/%m/%y") %>
            <% end %>
          </td>
          <td><%= formula1.team_1 %></td>
          <td><%= formula1.team_2 %></td>
          <td><%= formula1.league %></td>
          <td><%= formula1.odds %></td>
          <td><%= formula1.chance %>%</td>
          <td><%= formula1.pick %></td>
          <% case formula1.status %>
          <% when 0 %>
          <%= '<td class="undefined">AWAITING</td>'.html_safe %>
          <% when 1 %>
          <%= '<td class="won">WON</td>'.html_safe %>
          <% when 2 %>
          <%= '<td class="lost">LOST</td>'.html_safe %>
          <% when 3 %>
          <%= '<td class="lost">DRAW</td>'.html_safe %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@formula1) %>
</section>