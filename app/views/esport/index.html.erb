<section id='header'>
  <h1>Today's best picks => eSports</h1>
</section>

<aside id='info1' class='info'>
  
</aside>

<section id='results'>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Team one</th>
        <th>Team two</th>
        <th>League</th>
        <th>Odds</th>
        <th>% chance</th>
        <th>Pick</th>
        <th>Result</th>
      </tr>
    </thead>
    <tbody>
      <% @esports.each do |esport| %>
        <tr>
          <td>
            <% if esport.match_starts_at.today? %>
              <%= esport.match_starts_at.strftime("%H:%M %Z") %>
            <% else %>
              <%= esport.match_starts_at.strftime("%-d/%m/%y") %>
            <% end %>
          </td>
          <td><%= esport.team_1 %></td>
          <td><%= esport.team_2 %></td>
          <td><%= esport.league %></td>
          <td><%= esport.odds %></td>
          <td><%= esport.chance %>%</td>
          <td><%= esport.pick %></td>
          <% case esport.status %>
          <% when 0 %>
          <%= '<td class="undefined">AWAITING</td>'.html_safe %>
          <% when 1 %>
          <%= '<td class="won">WON</td>'.html_safe %>
          <% when 2 %>
          <%= '<td class="lost">LOST</td>'.html_safe %>
          <% when 3 %>
          <%= '<td class="lost">DRAW</td>'.html_safe %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@esports) %>
</section>

