<p id="notice"><%= notice %></p>

<h1 class='admin_mode'>edit_mode: on</h1>

<section id='results' class='wider'>
  <table>
    <thead>
      <tr>
        <th>Match starts at</th>
        <th>Rider one</th>
        <th>Rider two</th>
        <th>League</th>
        <th>Odds</th>
        <th>Chance</th>
        <th>Pick</th>
        <th>Status</th>
        <th>Main page</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <% @moto3s.each do |moto3| %>
        <tr>
          <td><%= moto3.match_starts_at %></td>
          <td><%= moto3.team_1 %></td>
          <td><%= moto3.team_2 %></td>
          <td><%= moto3.league %></td>
          <td><%= moto3.odds %></td>
          <td><%= moto3.chance %>%</td>
          <td><%= moto3.pick %></td>
          <% case moto3.status %>
          <% when 0 %>
          <%= '<td class="undefined">AWAITING</td>'.html_safe %>
          <% when 1 %>
          <%= '<td class="won">WON</td>'.html_safe %>
          <% when 2 %>
          <%= '<td class="lost">LOST</td>'.html_safe %>
          <% when 3 %>
          <%= '<td class="lost">DRAW</td>'.html_safe %>
          <% end %>
          <td><%= moto3.main_page %></td>
          <td><%= link_to 'Show', moto3 %></td>
          <td><%= link_to 'Edit', edit_moto3_path(moto3) %></td>
          <td><%= button_to 'Destroy', moto3, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add record', new_moto3_path %>
</section>