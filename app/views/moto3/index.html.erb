<section id='header'>
  <h1>Today's best picks => Moto 3</h1>
</section>

<aside id='info1' class='info'>
  
</aside>

<section id='results'>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Rider one</th>
        <th>Rider two</th>
        <th>League</th>
        <th>Odds</th>
        <th>% chance</th>
        <th>Pick</th>
        <th>Result</th>
      </tr>
    </thead>
    <tbody>
      <% @moto3s.each do |moto3| %>
        <tr>
          <td>
            <% if moto3.match_starts_at.today? %>
              <%= moto3.match_starts_at.strftime("%H:%M %Z") %>
            <% else %>
              <%= moto3.match_starts_at.strftime("%-d/%m/%y") %>
            <% end %>
          </td>
          <td><%= moto3.team_1 %></td>
          <td><%= moto3.team_2 %></td>
          <td><%= moto3.league %></td>
          <td><%= moto3.odds %></td>
          <td><%= moto3.chance %>%</td>
          <td><%= moto3.pick %></td>
          <% case moto3.status %>
          <% when 0 %>
          <%= '<td class="undefined">AWAITING</td>'.html_safe %>
          <% when 1 %>
          <%= '<td class="won">WON</td>'.html_safe %>
          <% when 2 %>
          <%= '<td class="lost">LOST</td>'.html_safe %>
          <% when 3 %>
          <%= '<td class="lost">DRAW</td>'.html_safe %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@moto3s) %>
</section>

  <aside id='legend'>
    <p><b>who's better</b> - which of these two riders would finish first – 1 means rider one, 2 means rider two</p>
    <p><b>position</b> - which position would that rider have – V means he will win, 1-3 means he will be at least 3rd, 1-5 means at least 5th etc.</p>
  </aside>